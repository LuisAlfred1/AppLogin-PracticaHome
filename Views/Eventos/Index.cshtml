<head>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.5/main.min.css" rel="stylesheet">

</head>
<body>

    <div class="container mt-5">
        <div class="row g-4">
            <!-- Columna para las tareas -->
            <div class="col-md-4">
                <div class="card bg-success h-100">
                    <div class="card-header">
                        <h3 class="text-center text-white">10/02/2025</h3>
                    </div>
                    <div class="card-body text-white">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-success text-white">✅ Tarea 1</li>
                            <li class="list-group-item bg-success text-white">✅ Tarea 2</li>
                            <li class="list-group-item bg-success text-white">⏳ Tarea 3</li>
                            <li class="list-group-item bg-success text-white">🔴 Tarea 4</li>
                        </ul>
                    </div>
                    <div class="card-footer text-center text-white">
                        📌 No olvides revisar las tareas pendientes
                    </div>
                </div>
            </div>

            <!-- Columna para el calendario -->
            <div class="col-md-8">
                <div class="card h-100">
                    <div class="card-body">
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.5/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es'
            });
            calendar.render();
        });
    </script>

</body>