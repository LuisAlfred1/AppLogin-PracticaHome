@model AppLogin.Models.UsuarioVM;
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <form asp-controller="Acceso" asp-action="Registrarse" method="post" id="formulario" class="p-4 rounded shadow mx-auto">
            <div class="text-center text-white mb-4">
                <h3 class="fw-bold">Regístrate <i class="bi bi-person-add"></i></h3>
            </div>
            <hr />
            <div class="mb-3">
                <label class="form-label fw-semibold">Nombre Completo</label>
                <input class="form-control" type="text" placeholder="Juan Pérez" asp-for="NombreCompleto" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Correo Electrónico</label>
                <input class="form-control" type="email" placeholder="correo@ejemplo.com" asp-for="Correo" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Contraseña</label>
                <input class="form-control" type="password" placeholder="*******" asp-for="Clave" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Confirmar Contraseña</label>
                <input class="form-control" type="password" placeholder="*******" asp-for="ConfirmarClave" required />
            </div>
            <div class="d-grid gap-2">
                <button class="btn text-white" type="submit">Registrarse</button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="text-center mt-3">
                ¿Ya tienes cuenta? <a asp-controller="Acceso" asp-action="Login" class="text-white fw-bold">Inicia sesión!</a>
            </div>
        </form>
    </div>

</body>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #1b3c4f, #00a86b);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 95vh;
        margin: 0;
    }

    .container {
        animation: fadeIn 0.6s ease-out;
    }

    #formulario {
        max-width: 400px;
        background: rgba(255,255,255,.2);
        backdrop-filter: blur(20px);
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn {
        background: #00a86b;
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

    .btn:hover {
        background: #00c77b;
        box-shadow: 0 5px 15px rgba(0, 200, 122, 0.5);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
