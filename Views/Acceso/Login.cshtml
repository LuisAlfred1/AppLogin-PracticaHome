@model AppLogin.Models.LoginVM
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        
        <form asp-controller="Acceso" asp-action="Login" method="post" id="formulario" class="p-4 rounded shadow mx-auto" style="max-width: 400px;">
            <div class="text-center mb-4">
                <h3>Usuario <i class="bi bi-person-fill"></i></h3>
            </div>
            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Correo" required />
            <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Clave" required />
            <div class="d-grid gap-2 mb-3">
                <button class="btn text-white" type="submit">Iniciar sesión</button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="text-center">
                ¿No tienes cuenta? <a asp-controller="Acceso" style="color:white; font-weight:350;" asp-action="Registrarse">Registrate ya!</a>
            </div>
        </form>
    </div>

</body>



<style>


    body {
        /*background-image: radial-gradient(circle at 0% 0%, #98a5ff 0, #486ee5 50%, #003a8b 100%);*/
        /*background-image: linear-gradient(25deg, #9df08c 0, #8de98e 16.67%, #7ce18f 33.33%, #6cd890 50%, #5ccf90 66.67%, #4cc691 83.33%, #3cbf91 100%);*/
        background: linear-gradient(135deg, #2a6d46, #4b9e68);
    }

    .container {
        animation: presentacion 0.6s ease-out;
    }

    #formulario{
        background: rgba(255,255,255,.4);
        backdrop-filter: blur(20px);
    }
    .btn{
        background: #00986c;
        border: none;
    }
    .btn:hover{
        background:#2ca880;
        border:none;
    }
</style>