@model AppLogin.Models.LoginVM
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        
        <form asp-controller="Acceso" asp-action="Login" method="post" id="formulario" class="p-4 rounded shadow mx-auto" style="max-width: 400px;">
            <div class="text-center mb-4">
                <h3>Usuario <i class="bi bi-person-fill"></i></h3>
            </div>
            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Correo" required />
            <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Clave" required />
            <div class="d-grid gap-2 mb-3">
                <button class="btn btn-primary" type="submit">Iniciar sesión</button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="text-center">
                ¿No tienes cuenta? <a asp-controller="Acceso" asp-action="Registrarse">Registrate ya!</a>
            </div>
        </form>
    </div>

</body>



<style>


    body {
        /*background-image: radial-gradient(circle at 0% 0%, #98a5ff 0, #486ee5 50%, #003a8b 100%);*/
        /*background-image: linear-gradient(180deg, #a5d9f4 0, #6cb4d8 50%, #1d90bd 100%);*/
        background-image: radial-gradient(circle at 50% -20.71%, #a7deff 0, #6c90d8 50%, #38496b 100%);
    }

    .container {
        animation: presentacion 0.6s ease-out;
    }

    #formulario{
        background: rgba(255,255,255,.4);
        backdrop-filter: blur(20px);
    }
    .btn:hover{
        background:blue;
    }
</style>