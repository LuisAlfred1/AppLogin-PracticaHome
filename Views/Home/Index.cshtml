@using System.Security.Claims;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    @if (User.Identity!.IsAuthenticated)
    {
        var hora = DateTime.Now.Hour;
        var saludo = hora < 12 ? "Buenos días" : (hora < 18 ? "Buenas tardes" : "Buenas noches");
        <h1 class="display-4 mt-3" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
            @saludo @User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault()
        </h1>
    }
</div>



